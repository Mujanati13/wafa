# ============================================
# WAFA Backend - Production Environment
# ============================================
# COPY THIS FILE TO .env.production AND FILL IN YOUR VALUES
# DO NOT COMMIT .env.production TO VERSION CONTROL

# Server Configuration
PORT=5010
NODE_ENV=production

# Database Configuration
# NOTE: This will be overridden by docker-compose.yml for Docker deployments
# The docker-compose environment takes precedence
# Only needed if running backend outside Docker
MONGO_URL=mongodb://admin:changeme123@mongodb:27017/wafa?authSource=admin

# Session & Security
SESSION_SECRET=YOUR_VERY_SECURE_SESSION_SECRET_CHANGE_THIS_IN_PRODUCTION
JWT_SECRET=YOUR_VERY_SECURE_JWT_SECRET_CHANGE_THIS_IN_PRODUCTION

# CORS Configuration
CORS_ORIGIN=https://imrs-qcm.com,https://www.imrs-qcm.com,https://backend.imrs-qcm.com

# Frontend URL (for email links)
FRONTEND_URL=https://imrs-qcm.com

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
ADMIN_EMAIL=admin@imrs-qcm.com

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_from_console
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_console
GOOGLE_CALLBACK_URL=https://backend.imrs-qcm.com/api/v1/auth/google/callback

# PayPal Payment Configuration
PAYPAL_CLIENT_ID=your_paypal_live_client_id
PAYPAL_CLIENT_SECRET=your_paypal_live_client_secret
PAYPAL_MODE=live

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Firebase Admin SDK (Optional - use file or env vars)
# If using environment variables instead of service account file:
# FIREBASE_PROJECT_ID=your_firebase_project_id
# FIREBASE_PRIVATE_KEY=your_firebase_private_key
# FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Google Gemini AI (if used)
GEMINI_API_KEY=your_gemini_api_key_if_needed

# Redis (Optional - for caching)
# REDIS_URL=redis://redis:6379
