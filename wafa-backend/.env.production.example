# ===========================================
# WAFA Backend - Production Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=production
PORT=5010

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_URL=https://imrs-qcm.com
CORS_ORIGIN=https://imrs-qcm.com,https://www.imrs-qcm.com,https://backend.imrs-qcm.com

# ===========================================
# Database Configuration
# ===========================================
# Option 1: MongoDB Atlas (Recommended for production)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/wafa?retryWrites=true&w=majority

# Option 2: Docker MongoDB Container
# MONGO_URL=mongodb://admin:changeme@mongodb:27017/wafa?authSource=admin

# ===========================================
# Security & Authentication
# ===========================================
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_me_in_production
SESSION_SECRET=your_super_secret_session_key_change_me_in_production

# ===========================================
# Firebase Admin SDK Configuration
# ===========================================
# Option 1: Use environment variables (Recommended for Docker)
FIREBASE_PROJECT_ID=elearning-8af75
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@elearning-8af75.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Option 2: Use JSON file (mount as volume in docker-compose.yml)
# Place firebase-service-account.json in the backend directory

# ===========================================
# Email Configuration (Gmail)
# ===========================================
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
ADMIN_EMAIL=admin@imrs-qcm.com

# ===========================================
# Google OAuth Configuration
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://backend.imrs-qcm.com/api/v1/auth/google/callback

# ===========================================
# PayPal Configuration
# ===========================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live
# Use 'sandbox' for testing, 'live' for production

# ===========================================
# Cloudinary Configuration (Image/File Upload)
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# Google Gemini AI Configuration (Optional)
# ===========================================
GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# Redis Configuration (Optional - for caching)
# ===========================================
REDIS_URL=redis://redis:6379
# Leave commented if not using Redis

# ===========================================
# MongoDB Docker Configuration (if using container)
# ===========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_change_me

# ===========================================
# Logging & Monitoring
# ===========================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=10485760
# 10MB in bytes (10 * 1024 * 1024)
